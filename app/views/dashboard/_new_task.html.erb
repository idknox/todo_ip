<%= form_for [current_user, task] do |f| %>
  <div class="row new-task-container">
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1e col-md-10 col-md-offset-2 new-task">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4 new-task-row">
          <div class="field">
            <%= f.text_field :details, placeholder: 'Task Details' %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 new-task-row">
          <div class="field">
            <%= f.text_field :due_date, placeholder: 'Due Date', onfocus: "(this.type='date')" %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
          <%= f.submit 'Create Task', class: 'btn btn-default button' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
