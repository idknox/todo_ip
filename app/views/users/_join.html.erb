<div class="row">
  <div class=" col-xs-12 col-md-4 col-md-offset-4 login">
    <%= form_for @user do |f| %>
      <div class="row">
        <div class="col-md-12 errors">
          <% if f.object.errors.full_messages.any? %>
            <%= f.object.errors.full_messages.first %>
          <% else %>
            &nbsp;
          <% end %>
        </div>
        <div class="col-xs-12 col-md-10 col-md-offset-1 login-row">
          <div class="label">
            <%= f.label :name %>
          </div>
          <div class="field">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="col-md-10 col-md-offset-1 login-row">
         <div class="label">
            <%= f.label :email %>
          </div>
          <div class="field">
            <%= f.email_field :email %>
          </div>
        </div>
        <div class="col-md-10 col-md-offset-1 login-row">
          <div class="label">
            <%= f.label :password %>
          </div>
          <div class="field">
            <%= f.password_field :password %>
          </div>
        </div>
        <div class="col-md-10 col-md-offset-1 login-row">
          <div class="label">
            <%= f.label :confirm_pw %>
          </div>
          <div class="field">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>
      </div>
      <div class="col-md-6 col-md-offset-3 login-row">
        <%= f.submit 'Join', class: 'btn btn-default button' %>
      </div>
    <% end %>
  </div>
</div>
</div>